package com.example.matthew.zombieslayer;

import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.graphics.Rect;
import android.view.View;

/**
 * Created by Kevin on 4/10/2015.
 */
public class DrawingThings extends View {
    int elapsedTime = 0;
    Bitmap human1;
    Bitmap zombie1;
    Bitmap zombie2;
    Bitmap zombie3;
    Bitmap zombie4;
    float x;
    float y;
    float xo;
    float yo;
    float x2;
    float y2;
    int speed;
    Rect hitbox;
    int facing;


    public DrawingThings(Context context) {
        super(context);

        human1 = BitmapFactory.decodeResource(getResources(),R.drawable.human1);
        zombie1 = BitmapFactory.decodeResource(getResources(),R.drawable.human1);
        zombie2 = BitmapFactory.decodeResource(getResources(),R.drawable.human1);
        zombie3 = BitmapFactory.decodeResource(getResources(),R.drawable.human1);
        zombie4 = BitmapFactory.decodeResource(getResources(),R.drawable.human1);
        x = 0;
        y = 0;
    }
    @Override
    protected void onDraw(Canvas canvas){
        super.onDraw(canvas);
        xo = x;
        yo = y;
        if (x2==x&&y2==y){
        } else if (x2<x&&y2==y){
            x = x-(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 1;
        } else if (x2>x&&y2==y){
            x = x+(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 0;
        } else if (x2==x&&y2<y){
            y = y-(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 2;
        } else if (x2==x&&y2>y){
            y = y+(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 3;
        } else if (x2<x&&y2<y){
            x = x-(speed*elapsedTime);
            y = y-(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 1;
        } else if (x2>x&&y2<y){
            x = x+(speed*elapsedTime);
            y = y-(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 0;
        } else if (x2<x&&y2>y){
            x = x-(speed*elapsedTime);
            y = y+(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 1;
        } else if (x2>x&&y2>y){
            x = x+(speed*elapsedTime);
            y = y+(speed*elapsedTime);
            hitbox.offsetTo((int)x,(int)y);
            facing = 0;
        }
        canvas.drawColor(Color.WHITE);

        canvas.drawBitmap(human1,x,y,new Paint());
        canvas.drawBitmap(zombie1,canvas.getWidth()/2, canvas.getHeight()/2,new Paint());
        canvas.drawBitmap(zombie2,0,canvas.getHeight()-100,new Paint());
        canvas.drawBitmap(zombie3,canvas.getWidth()-50,0,new Paint());
        canvas.drawBitmap(zombie4,canvas.getWidth()-50,canvas.getHeight()-100,new Paint());

        elapsedTime++;
        //canvas.drawBitmap(human1,canvas.getWidth()/2,canvas.getHeight()/2, new Paint());
        invalidate();
    }


}
